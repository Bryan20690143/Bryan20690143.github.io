---
import Header from '../components/Header.astro';
import Project from '../components/Project.astro';
import Sidebar from '../components/Sidebar.astro';
const projects = [
  {
    title: "IA Chatbot",
    desc: [
      "Contribucion en la creacion de una IA Chatbot para resolucion de tickets alimentada por documentacion",
      "Desarrollada con Python y Amazon Bedrock"
    ],
    tech: ["Python", "Amazon Bedrcok", "Amazon S3"]
  },
  {
    title: "Punto de Venta",
    desc: [
      "Creacion de un Punto de venta para sucursales",
      "Desarrollada utilizando Angular y Java"
    ],
    tech: ["Java", "Angular", "CSS", "XAMPP"]
  },
];
---

<!DOCTYPE html>
<html
>
  <Header title="Proyectos Personales | Bryan Resendiz" />
  <body>
    <div class="content">
        <Sidebar selectedItem="personal-projects" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/" class="back-nav-button w-inline-block"
              ><img src="/assets/back.svg" loading="lazy" alt="" class="back-nav-img" />
              <div>Atras</div></a
            >
          </div>
          <div class="content-container">
            <h1>Proyectos Personales</h1>
            <section class="items-container">
                <div class="resouce-items">
                    {projects.map(project => (
                      <Project 
                        title={project.title} 
                        desc={project.desc}
                        tech={project.tech}
                      />
                    ))}
                  </div>
            </section>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>
